  <div>
    <div class="container-fluid">
      <div class="row row-centered">
        <div class="col-xs-10 col-centered">
          <div ng-controller="EditableRowCtrl">
            <table class="table table-hover table-condensed">
              <thead>
                <tr style="font-weight: bold">
                  <th style="width:80%">Category</th>
                  <th style="width:20%"></th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="user in users">
                  <td>
                    <span editable-text="user.name" e-name="name" e-form="rowform">
                      {{ user.name || 'empty' }}
                    </span>
                  </td>
                  <td>
                    <div>
                      <form editable-form name="rowform" onbeforesave="saveUser($data, user.id)" ng-show="rowform.$visible" class="form-buttons form-inline" shown="inserted == user">
                       <button type="submit" ng-disabled="rowform.$waiting" class="btn btn-primary">
                          <i class="fa fa-check-square-o fa-lg" aria-hidden="true"></i>
                        </button>
                        <button type="button" ng-disabled="rowform.$waiting" ng-click="rowform.$cancel()" class="btn btn-default">
                          <i class="fa fa-undo fa-lg" aria-hidden="true"></i>
                        </button>  
                      </form>
                      <div class="buttons" ng-show="!rowform.$visible">
                        <button type="button" class="btn btn-primary" ng-click="rowform.$show()">
                          <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-danger" ng-click="removeUser($index)">
                          <i class="fa fa-times fa-lg" aria-hidden="true"></i>
                        </button>
                      </div>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
            <button type="button" class="btn btn-default" ng-click="addUser()">
              <i class="fa fa-plus fa-lg" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>